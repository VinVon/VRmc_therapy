<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/au_1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/logo"/>
    <LinearLayout
        android:layout_below="@+id/au_1"
        android:id="@+id/tv_main_welcome"
       android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心景"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM"
            android:textSize="10dp"
            android:paddingBottom="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VRMC治疗师"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_main_welcome"
        android:id="@+id/au_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/white_alpha_percent_45"></LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/au_line1"
        android:orientation="horizontal"
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/phones"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/phonenumber"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ll_1"
        android:id="@+id/au_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/white_alpha_percent_45"></LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_below="@+id/au_line2"
        android:orientation="horizontal"
      android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/password" />

        <EditText
            android:layout_marginLeft="15dp"
            android:inputType="textPassword"
            android:id="@+id/hospital"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ll_2"
        android:id="@+id/au_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/white_alpha_percent_45"></LinearLayout>
    <TextView
        android:id="@+id/login_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="帮助"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/au_line3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

    <Button
        android:layout_below="@+id/login_help"
        android:layout_marginTop="10dp"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button"
        android:layout_width="230dp"
        android:layout_marginBottom="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/img_1"/>

</RelativeLayout>
