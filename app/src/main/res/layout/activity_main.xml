<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="vr.promulgator.com.vrmc.MainActivity">
    <RelativeLayout
        android:id="@+id/global_search_action_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/white_alpha_percent_45"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/more"/>
        <Button
            android:id="@+id/tab_bar_keyword_et"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@+id/img_more"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:maxLength="11"
            android:imeOptions="actionSearch"
            android:hint="搜索你想要的"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:textSize="13sp"
            android:background="@drawable/round_white_btn_bg"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/tv_main_welcome"
        android:id="@+id/tv_vrromm"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用心景"
        android:textColor="@color/white_alpha_percent_45"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_below="@+id/img_main"
        android:id="@+id/tv_main_welcome"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用心景"
            android:textColor="@color/white_alpha_percent_45"
        android:textSize="16dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM"
            android:textColor="@color/white_alpha_percent_45"
            android:textSize="10dp"
            android:paddingBottom="6dp"
            />
        <TextView
            android:textColor="@color/white_alpha_percent_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VRMC"
            android:textSize="16dp"
            />
    </LinearLayout>
</RelativeLayout>
